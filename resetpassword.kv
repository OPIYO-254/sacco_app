Screen:
    name: 'reset_password'
    BoxLayout:
        orientation: "vertical"
        TopBar:
            left_action_items : [["chevron-left" , lambda _: setattr(root.manager, 'current', 'send_reset_otp')]]
            title: "Reset Password"
        MDFloatLayout:
            md_bg_color: 1,1,1,1
            MDFloatLayout:
                size_hint: 1, .16
                pos_hint: {"center_x": .5, "center_y": .85}
                TextField:
                    id: reset_otp
                    hint_text: "Enter OTP"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    icon_right: "email"
                    size_hint: .8, .9

            MDFloatLayout:
                size_hint: 1, .16
                pos_hint: {"center_x": .5, "center_y": .75}
                TextField:
                    id: passwd
                    hint_text: "Enter New Password"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #icon_right: "email"
                    size_hint: .8, .9
                    password: True
                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_y": .5}
                    pos: passwd.width - self.width + dp(36), 0
                    theme_text_color: "Hint"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        passwd.password = False if passwd.password is True else True

            MDFloatLayout:
                size_hint: 1, .16
                pos_hint: {"center_x": .5, "center_y": .65}
                TextField:
                    id: passwd1
                    hint_text: "Confirm Password"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    #icon_right: "email"
                    size_hint: .8, .9
                    password: True
                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_y": .5}
                    pos: passwd1.width - self.width + dp(36), 0
                    theme_text_color: "Hint"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        passwd.passwd1 = False if passwd1.password is True else True

            MDFloatLayout:
                size_hint: 1, .16
                pos_hint: {"center_x": .5, "center_y": .525}
                RaisedButton:
                    text: "Reset Password"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: app.reset_password(reset_otp,passwd,passwd1)