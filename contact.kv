Screen:
    name: "contact_us"
    BoxLayout:
        orientation: "vertical"
        TopBar:
            left_action_items : [["chevron-left" , lambda _: setattr(root.manager, 'current', 'registered_members')]]
        MDBoxLayout:
            md_bg_color:9/255, 178/255, 159/255, .1
            padding: 10
            MDList:
                size_hint_y:1
                TwoLineAvatarIconListItem:
                    text:'Phone'
                    secondary_text:'07XXXXXXXX'
                    IconLeftWidget:
                        icon: "phone"
                    IconRightWidget:
                        icon:'chevron-right'
                TwoLineAvatarIconListItem:
                    text:'Email Us'
                    secondary_text:'sojrelsacco@gmail.com'
                    IconLeftWidget:
                        icon: "email"
                    IconRightWidget:
                        icon:'chevron-right'
                TwoLineAvatarIconListItem:
                    text:'Visit our website'
                    secondary_text:'https://'
                    IconLeftWidget:
                        icon: "link"
                    IconRightWidget:
                        icon:'chevron-right'
                
