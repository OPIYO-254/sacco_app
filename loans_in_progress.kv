
Screen:
    name: 'loans_in_progress'
    MDBoxLayout:
        orientation:"vertical"
        TopBar:
            left_action_items : [["chevron-left" , lambda _: setattr(root.manager, 'current', 'registered_members')]]
            title: "Loans in Progress"
        MDFloatLayout:
            hint_size_x: 1
            pos_hint: {"center_x": .5, "center_y": .9}
            ScrollView:
                id: loans
                size_hint_x: .8
                pos_hint: {'center_x': .5, 'center_y': .5}
                do_scroll_x: False
                width: self.width
                height: self.height
                MDList:
                    id: loans
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint_x: 1