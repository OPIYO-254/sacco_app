<RectCard@MDCard>:
    orientation: "vertical"
    size_hint_y: None
    size_hint_x: .9
    size: "280dp", "100dp"
    # line_color:(57/255, 56/255, 56/255, 1)
    radius: 10
    ripple_behavior: True

Screen:
    name: "homepage"
    id: homepage
    MDNavigationLayout:
        ScreenManager:
            id: screen_manager
            Screen:
                MDBoxLayout:
                    orientation: "vertical"
                    TopBar:
                        left_action_items : [["menu" , lambda x : nav_drawer.set_state("toggle")]]
                        
                   
                    MDBoxLayout:
                        orientation:"vertical"
                        spacing: "10dp"
                        padding: "10dp"
                   

                        RectCard:
                            pos_hint: {"center_x": .5, "center_y": .8}
                            md_bg_color: get_color_from_hex("#1FBFB8")
                            padding: 10
                            FloatLayout:
                                size_hint: 1,.5
                                MDIcon:
                                    icon: "wallet-membership"
                                    size_hint: .1,.08
                                    pos_hint: {"center_x": .1, "center_y": .9}
                                    color: get_color_from_hex("#FFFFFF")
                                MDLabel:
                                    text: 'Membership'
                                    font_name: "assets/Poppins/Poppins-SemiBold.ttf"
                                    pos_hint: {"center_x": .7, "center_y": .9}
                                    color: get_color_from_hex("#FFFFFF")
                                    
                                MDLabel:
                                    text: "The membership of the Sacco is open to all members of the public both in formal and informal employment sectors. \nFor registration as a member, one needs a national ID or Passport and a KRA pin with ability to show to that they are able to make montly contributions as members of the sacco."
                                    font_name: "Poppins"
                                    pos_hint: {"center_x": .5, "center_y": .4}
                                    color: get_color_from_hex("#FFFFFF")
                                    font_size: '8dp'
                                    multiline: True

                        RectCard:
                            padding: 10
                            pos_hint: {"center_x": .5, "center_y": .8}
                            md_bg_color: get_color_from_hex("#05716C")
                            size_hint_y: None
                            height: '120dp'
                            FloatLayout:
                                size_hint: 1,.5
                                MDIcon:
                                    icon: "cash-lock-open"
                                    size_hint: .1,.08
                                    pos_hint: {"center_x": .1, "center_y": .9}
                                    color: get_color_from_hex("#FFFFFF")
                                MDLabel:
                                    text: 'Contributions'
                                    pos_hint: {"center_x": .7, "center_y": .9}
                                    font_name: "assets/Poppins/Poppins-SemiBold.ttf"
                                    color: get_color_from_hex("#FFFFFF")
                                MDLabel:
                                    text: 'Contributions include Shares and Savings. \nShares are non-refundable purchased either once or monthtly and enable a members to earn dividents. \nA minimum share amount is Ksh. 10,000. Shares can only be transferred to existing members. \nSavings on the other hand are periodical contributions based on which members qualify a loan and earn interest.\nThey can only be accessed upon membership withdrawal.'
                                    font_name: "Poppins"
                                    font_size: '8dp'
                                    pos_hint: {"center_x": .5, "center_y": .4}
                                    color: get_color_from_hex("#FFFFFF")
                                    multiline: True

                        RectCard:
                            padding: 10
                            pos_hint: {"center_x": .5, "center_y": .8}
                            md_bg_color: get_color_from_hex("#1978A5")
                            FloatLayout:
                                size_hint: 1,.5
                                MDIcon:
                                    icon: "account-cash"
                                    size_hint: .1,.08
                                    pos_hint: {"center_x": .1, "center_y": .9}
                                    color: get_color_from_hex("#FFFFFF")
                                MDLabel:
                                    text: "Loan Eligibility"
                                    font_name: "assets/Poppins/Poppins-SemiBold.ttf"
                                    pos_hint: {"center_x": .7, "center_y": .9}
                                    color: get_color_from_hex("#FFFFFF")
                                    
                                MDLabel:
                                    text: "For a member to qualify for a loan, one must have been a member of the sacco for a period of not less than 6 months. \nThe members must also have achieved the minimum share amount. \nOne must have continuously contributed towards savings for the last six months"
                                    font_name: "Poppins"
                                    font_size: '8dp'
                                    pos_hint: {"center_x": .5, "center_y": .4}
                                    color: get_color_from_hex("#FFFFFF")
                                    multiline: True
                                
                        RectCard:
                            padding: 10
                            pos_hint: {"center_x": .5, "center_y": .8}
                            md_bg_color: get_color_from_hex("#031163")
                            FloatLayout:
                                size_hint: 1,.5
                                MDIcon:
                                    icon: "cash"
                                    size_hint: .1,.1
                                    pos_hint: {"center_x": .1, "center_y": .9}
                                    color: get_color_from_hex("#FFFFFF")

                                MDLabel:
                                    text: "Loan Products"
                                    font_name: "assets/Poppins/Poppins-SemiBold.ttf"
                                    pos_hint: {"center_x": .7, "center_y": .9}
                                    color: get_color_from_hex("#FFFFFF")
                    
                                MDLabel:
                                    text: "Various loan products are available for sacco members. \n1. Development loan.\n2. Jijenge Loan. \n3. Emergency loan. \n4 Corporate Loan. \n5. School fees loan, etc."
                                    font_name: "Poppins"
                                    font_size: '8dp'
                                    pos_hint: {"center_x": .5, "center_y": .4}
                                    color: get_color_from_hex("#FFFFFF")
                                    multiline: True
                                

                        Widget:

        MDNavigationDrawer:
            id: nav_drawer
            size_hint_x: None
            width: '240dp'
            nav_drawer: nav_drawer
            font_size: '12dp'
            BoxLayout:
                orientation: 'vertical'
                MDFloatLayout:
                    orientation: 'vertical'
                    md_bg_color: get_color_from_hex("#09B29F")
                    size_hint: 1,.4
                    FitImage:
                        source: 'assets/images/logo.png'
                        size_hint_y: None
                        size_hint_x: None
                        pos_hint: {"center_x": .5, "center_y": .5}
                        height: dp(80)
                        width: dp(80)
                        radius: [80,]
                    MDLabel:
                        text: "Sojrel Sacco Ltd"
                        size_hint_y: None
                        theme_text_color: "Custom"
                        color: 1, 1, 1, 1
                        font_style: 'Subtitle1'
                        height: self.texture_size[1]
                        halign: "center"
                        pos_hint: {"center_x": .5, "center_y": .15}

                ScrollView:
                    text_color: get_color_from_hex("#09B29F")
                    spacing: '8dp'
                    padding: '8dp'
                    MDList:
                        OneLineIconListItem:
                            text: 'Register'
                            theme_text_color: 'Custom'
                            text_color: get_color_from_hex("#09B29F")
                            on_release:
                                root.manager.current='my_profile-screen'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: 'account-outline'
                                color:get_color_from_hex("#09B29F")
                        OneLineIconListItem:
                        OneLineIconListItem:
                        OneLineIconListItem:
                        OneLineIconListItem:
                        OneLineIconListItem:
                        OneLineIconListItem:
                            text: 'Logout'
                            theme_text_color: 'Custom'
                            text_color: get_color_from_hex("#09B29F")
                            on_release:
                                # root.manager.current='login-screen'
                                app.logout()
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: 'logout'
                                color:get_color_from_hex("#09B29F")