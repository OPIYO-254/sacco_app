Screen:
    name: "signup-screen"
    BoxLayout:
        orientation: "vertical"
        TopBar:
            left_action_items : [["chevron-left" , lambda _: setattr(root.manager, 'current', 'login-screen')]]
            title: "Create Account"
        MDFloatLayout:
            TextField:
                id: fname
                hint_text: "First Name"
                pos_hint: {"center_x": .5, "center_y": .88}
                size_hint_x: .8
            TextField:
                id: mname
                hint_text: "Middle Name"
                pos_hint: {"center_x": .5, "center_y": .78}
                size_hint_x: .8
            TextField:
                id: lname
                hint_text: "Last Name"
                pos_hint: {"center_x": .5, "center_y": .68}
                size_hint_x: .8
            TextField:
                id: mail
                hint_text: "Email"
                pos_hint: {"center_x": .5, "center_y": .58}
                size_hint_x: .8
            TextField:
                id: pwd
                hint_text: "Password"
                pos_hint: {"center_x": .5, "center_y": .48}
                password: True
                size_hint_x: .8
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .48}
                pos: pwd.width - self.width + dp(36), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    pwd.password = False if pwd.password is True else True
            TextField:
                id: pwd1
                hint_text: "Confirm Password"
                pos_hint: {"center_x": .5, "center_y": .38}
                password: True
                size_hint_x: .8
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .38}
                pos: pwd1.width - self.width + dp(36), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    pwd1.password = False if pwd1.password is True else True    
            RaisedButton:
                text: "Create Account"
                pos_hint: {"center_x": .5, "center_y": .25}
                on_release:
                    app.insert_client(fname, mname, lname, mail, pwd)
            MDLabel:
                text: "Already have account?"
                font_size: "12sp"
                size_hint_y: .5
                halign: "center"
                color: 9/255, 178/255, 159/255, 1
                font_name: "assets/Poppins/Poppins-Regular.ttf"
                pos_hint: {"center_x": .5, "center_y": .18}
                text_color: 9/255, 178/255, 159/255, 1
                background_color: (1,1,1,1)
            MDFlatButton:
                text: "Login"
                font_size: "12sp"
                size_hint_y: .1
                halign: "center"
                color: 9/255, 178/255, 159/255, 1
                font_name: "Poppins-SemiBold"
                pos_hint: {"center_x": .5, "center_y": .14}
                theme_text_color: "Custom"
                text_color: 9/255, 178/255, 159/255, 1
                background_color: (1,1,1,1)
                on_release:
                    root.manager.current='login-screen'
           
                

            

                
                

            
